{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
